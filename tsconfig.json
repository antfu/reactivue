{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["DOM", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, 
    "types": ["vitest/global"],
    "jsx": "react-jsx",
    "removeComments": false
  },
  "include": ["src", "test"],
  "exclude": ["**/node_modules/*", "dist"]
}
